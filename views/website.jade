doctype html
html(ng-app="app")
    head
        meta(charset="UTF-8")
        title= title
        meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
            
        base(href="/")
            
        link(href="components/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet", type="text/css")
        link(href="components/fontawesome/css/font-awesome.min.css", rel="stylesheet", type="text/css")
        link(href="components/ionicons/css/ionicons.min.css", rel="stylesheet", type="text/css")
            
        link(href="components/adminlte/dist/css/AdminLTE.min.css", rel="stylesheet", type="text/css")
        link(href="components/adminlte/dist/css/skins/_all-skins.min.css", rel="stylesheet", type="text/css")
            
        link(href='css/adminlte-skin.orange.css', rel="stylesheet")
        link(href='css/main.css', rel="stylesheet")
    
    body.skin-blue.fixed(ng-controller="ui_controller", ng-init="sidebar_init()")
        .wrapper(ng-class="sidebar_class")
            
            include ./inc_header.jade
            
            include ./inc_sidebar.jade
            
            section.content-wrapper.mod-pagex
                div(ng-view)
                
        script(src="components/angularjs/angular.min.js")
            
        script(src="components/angular-bootstrap/ui-bootstrap.min.js")
            
        script(src="components/angular-cookies/angular-cookies.min.js")
            
        script(src="components/angular-route/angular-route.min.js")
            
        script(src="js/app.js")
